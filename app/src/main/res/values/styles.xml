<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="MenuScreen">
        <item name="android:background">@drawable/main_menu_bg</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ArkhamButton">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textScaleX">1.2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/teutonic</item>
    </style>

    <style name="ArkhamButton.Small">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="ArkhamButton.VerySmall">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ArkhamRadioButton">
        <item name="android:padding">@dimen/checkbox_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/arnopro_textsize</item>
        <item name="android:fontFamily">@font/arnopro</item>
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:layout_gravity">bottom|start</item>
    </style>

</resources>
